<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context=".LapseActivityFragment">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="visible"
        android:indeterminate="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_above="@+id/txt_search_info"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textSize="25dp"
        android:visibility="visible"
        android:clickable="false"
        android:gravity="center"
        android:text="@string/connection_info_searching_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_search_info" />

    <ImageView
        android:src="@drawable/ic_error"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:id="@+id/img_device_info"
        android:visibility="gone"
        android:layout_above="@+id/txt_device_info"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textSize="25dp"
        android:visibility="gone"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/connection_info_no_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_device_info" />

    <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/lv_refresh"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lv_devices"
                android:visibility="visible" android:layout_alignTop="@+id/fab_device_search"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
