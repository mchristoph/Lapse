<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="at.mchristoph.lapse.app.fragments.LapseFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:padding="10dp" android:weightSum="1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAppearance="@style/LapseText"
            android:drawableStart="@drawable/ic_schedule"
            android:drawableLeft="@drawable/ic_schedule"
            android:text="Target Framerate"
            android:id="@+id/textView" android:gravity="center_vertical"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:textColor="#d2131313"
            android:id="@+id/editText" android:text="24" android:layout_marginBottom="18dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:drawableStart="@drawable/ic_timer"
              android:drawableLeft="@drawable/ic_timer"
              android:textAppearance="@style/LapseText" android:text="Shoot Intervall (s)"
              android:id="@+id/textView3" android:gravity="center_vertical"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="number"
              android:ems="10" android:id="@+id/editText2" android:text="5" android:textColor="#d2131313"
              android:layout_marginBottom="18dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_av_timer"
            android:drawableLeft="@drawable/ic_av_timer"
            android:textAppearance="@style/LapseText"
            android:text="Target Movie Time"
            android:id="@+id/textView2" android:layout_marginBottom="10dp" android:gravity="center_vertical"/>
    <LinearLayout android:layout_width="wrap_content" android:orientation="horizontal" android:layout_height="wrap_content"
                  android:layout_gravity="center">
        <NumberPicker
                android:theme="@style/LapsePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberPicker1" android:layout_gravity="center_horizontal"
                android:gravity="center_vertical" />
        <NumberPicker
            android:theme="@style/LapsePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberPicker2" android:layout_gravity="center_horizontal"/>
        <NumberPicker
            android:theme="@style/LapsePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberPicker3" android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="horizontal" android:gravity="center">
        <FrameLayout android:layout_width="wrap_content" android:layout_height="56dp"
                     android:orientation="horizontal" android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                      android:id="@+id/textView5" android:layout_centerVertical="true"
                      android:layout_alignLeft="@+id/imageView2" android:layout_alignStart="@+id/imageView2"
                      android:layout_gravity="bottom|center_horizontal" android:gravity="center"/>
            <ImageView android:layout_width="45dp" android:layout_height="45dp"
                       android:src="@drawable/ic_picture_collection" android:id="@+id/imageView2"
                       android:layout_above="@+id/textView5" android:layout_alignParentLeft="true"
                       android:layout_alignParentStart="true" android:layout_gravity="top|center_horizontal"/>
        </FrameLayout>
        <FrameLayout android:layout_width="wrap_content" android:layout_height="56dp"
                     android:orientation="horizontal" android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/textView4"
                    android:layout_centerVertical="true" android:layout_alignLeft="@+id/imageView"
                    android:layout_alignStart="@+id/imageView" android:layout_gravity="bottom|center_horizontal"
                    android:gravity="center"/>
            <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp" android:src="@drawable/ic_clock"
                    android:id="@+id/imageView"
                    android:layout_above="@+id/textView4"
                    android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                    android:layout_gravity="top|center_horizontal"/>
        </FrameLayout>


    </LinearLayout>
</LinearLayout>
</ScrollView>