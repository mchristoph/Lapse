<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="at.mchristoph.lapse.app.fragments.MenuFragment">

    <android.support.v7.widget.CardView
            android:id="@+id/btn_connect_device"
            android:clickable="true"
        card_view:cardCornerRadius="2dp"
            android:layout_margin="4dp"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="match_parent" android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ic_connect_device"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Connect to Device"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/btn_quick"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:clickable="false"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="@color/background_material_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Quick Start"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/btn_lapse_settings"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:clickable="false"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="@color/background_material_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="match_parent" android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ic_timelapse"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Lapse"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/btn_presets"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:clickable="false"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="@color/background_material_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="match_parent" android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ic_presets"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Presets"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/btn_history"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:clickable="false"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="@color/background_material_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent" android:gravity="center"
            android:layout_height="match_parent" android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ic_history"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:text="History"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
