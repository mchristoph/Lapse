<RelativeLayout
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <TextView
        android:text="Edit Preset"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:textAppearance="@style/LapseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <TextView
        android:text="Dismiss"
        android:textSize="20dp"
        android:padding="10dp"
        android:textAppearance="@style/LapseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:id="@+id/btn_dismiss"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_save"
        android:layout_toStartOf="@+id/btn_save" />

    <TextView
        android:text="Save"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_marginRight="5dp"
        android:textAppearance="@style/LapseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save"
        android:layout_above="@+id/include"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/seperator"
        android:background="@color/primary_text_default_material_very_light"
        android:layout_below="@+id/btn_dismiss"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="at.mchristoph.lapse.app.fragments.LapseSettingsFragment"
        android:layout_below="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp" android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textAppearance="@style/LapseText"
                android:text="@string/text_view_preset_name"
                android:gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:maxLines="1"
                android:textColor="#d2131313"
                android:id="@+id/txt_preset_name"
                android:layout_marginBottom="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textAppearance="@style/LapseText"
                android:text="@string/text_view_preset_desc"
                android:gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textImeMultiLine"
                android:ems="10"
                android:maxLines="3"
                android:textColor="#d2131313"
                android:id="@+id/txt_preset_description"
                android:layout_marginBottom="18dp" />

            <include layout="@layout/include_lapse_settings" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="horizontal" android:gravity="center">
                <FrameLayout android:layout_width="wrap_content" android:layout_height="56dp"
                    android:orientation="horizontal" android:layout_weight="1" android:layout_marginTop="0dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"
                        android:id="@+id/textView5" android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/imageView2" android:layout_alignStart="@+id/imageView2"
                        android:layout_gravity="bottom|center_horizontal" android:gravity="center"/>
                    <ImageView android:layout_width="45dp" android:layout_height="45dp"
                        android:src="@drawable/ic_picture_collection" android:id="@+id/imageView2"
                        android:layout_above="@+id/textView5" android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" android:layout_gravity="top|center_horizontal"/>
                </FrameLayout>
                <FrameLayout android:layout_width="wrap_content" android:layout_height="56dp"
                    android:orientation="horizontal" android:layout_weight="1" android:layout_marginTop="0dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/textView4"
                        android:layout_centerVertical="true" android:layout_alignLeft="@+id/imageView"
                        android:layout_alignStart="@+id/imageView" android:layout_gravity="bottom|center_horizontal"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp" android:src="@drawable/ic_clock"
                        android:id="@+id/imageView"
                        android:layout_above="@+id/textView4"
                        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                        android:layout_gravity="top|center_horizontal"/>
                </FrameLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>