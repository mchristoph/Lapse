<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primary_material_dark</item>
    </style>

    <style name="LapseTheme" parent="AppTheme" >
        <item name="android:textColorPrimary">@color/primary_text_white_material_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_light</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="LapseText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_material_light</item>
    </style>

    <style name="LapsePicker" parent="@style/LapseTheme">
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
    </style>

    <style name="LapseCircularProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/circular_progressbar</item>
    </style>
</resources>
